@model ProyectoXalli_Gentella.Models.Categoria

@{
    ViewBag.Title = "Edición";
    Layout = null;
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_content">

            @using (Html.BeginForm("Edit", "Categorias", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.CodigoCategoria)


                <div data-parsley-validate class="form-horizontal form-label-left">

                    <div class="form-group">
                        <div class="form-group">
                            @Html.Label("Código", htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                            <div class="col-md-2 col-sm-2 col-xs-2">
                                @Html.EditorFor(model => model.CodigoCategoria, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => model.CodigoCategoria, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <div class="">
                                    <label>
                                        @Html.CheckBoxFor(model => model.EstadoCategoria, new { @class = "js-switch", @onclick = "Check()", @id = "chkActive" })
                                        Estado
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Categoría", htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.EditorFor(model => model.DescripcionCategoria, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @maxlength = 50, @autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.DescripcionCategoria, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
                            <a onclick="CerrarModal()" class="btn btn-primary">Cerrar</a>
                            <button type="submit" class="btn btn-success">Guardar</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>

    var elemen, init;

    $(document).ready(function () {

        elem = document.querySelector('.js-switch');
        init = new Switchery(elem);
    });


    //CONFIRMACION DE ACTIVAR/DESACTIVAR
    function Check() {

        if (!elem.checked) {
            swal({
                title: "¿Desea desactivar el registro?",
                icon: "warning",
                buttons: {
                    botonNo: {
                        text: "No",
                        value: "no"
                    },
                    catch: {
                        text: "Sí",
                        value: "yes" //VALOR PARA UTILIZARLO EN EL SWITCH
                    }
                }//FIN DE BUTTONS
            })//FIN DEL SWAL

                .then((value) => {
                    switch (value) {

                        case "no":
                            //DESACTIVAR EL CHKBOX
                            elem.click();
                            break;

                        case "yes":
                            swal.close;
                            break;
                        default:
                            swal.close();
                    }//FIN SWITCH
                });//FIN THEN
        }
    }//FIN FUNCION

</script>
@model ProyectoXalli_Gentella.Models.Proveedor

@{
    ViewBag.Title = "Catálogo";
}

@Styles.Render("~/Content/datatableCSS")

<div class="page-title">
    <div class="title_left">
        <h3>@ViewBag.Title proveedores</h3>
    </div>
</div>

<br />

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Lista</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li class="pull-right">
                        <a onclick="CargarParcial('/Proveedores/Create')"><i class="fa fa-plus"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="Table" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.NombreComercial)</th>
                            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                            <th>Número RUC</th>
                            <th>Local</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_small-modal")

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datatableJS")
    <script src="~/Scripts/Catalogos/CRUD.js"></script>
    <!--DATATABLE PROVEEDORES-->
    <script>
        //LLENANDO EL DATATABLE CRUD
        $(document).ready(function () {
            //DEFINIENDO EL DATATABLE
            $("#Table").DataTable({
                ajax: {
                    url: "/Proveedores/GetData", //URL DE LA UBICACION DEL METODO
                    type: "GET", //TIPO DE ACCION
                    dataType: "JSON" //TIPO DE DATO A RECIBIR O ENVIAR
                },
                //DEFINIENDO LAS COLUMNAS A LLENAR
                columns: [
                    { data: "NombreComercial" },
                    { data: "Telefono" },
                    { data: "RUC" },
                    { data: "Local" },
                    {   //DEFINIENDO LOS BOTONES PARA EDITAR Y ELIMINAR POR MEDIO DE JS
                        data: "Id", "render": function (data) {
                            return "<a class='btn btn-success' onclick=CargarEditar('/Proveedores/Edit/" + data + "')><i class='fa fa-pencil'></i></a>" +
                                "<a class='btn btn-primary' Style='margin-left: 3px' onclick=CargarParcial('/Proveedores/Details/" + data + "')><i class='fa fa-eye'></i></a>" +
                                "<a class='btn btn-danger' Style='margin-left: 3px' onclick=deleteAlert('/Proveedores/Delete/'," + data + ")><i class='fa fa-trash'></i></a>"
                        }
                    }
                ],//FIN DE COLUMNAS
                //IDIOMA DE DATATABLE
                "language": {

                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",

                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                }//FIN IDIOMA DATATABLE
            });//FIN DECLARACION DEL DATATABLE
        });//FIN FUNCTION


        function CargarEditar(uri) {

            $("#small-modal").modal("show"); //MUESTRA LA MODAL
            $("#VistaParcial").html("");//LIMPIA LA MODAL POR DATOS PRECARGADOS

            $.ajax({
                type: "GET",
                url: uri,
                dataType: "JSON",
                success: function (data) {
                    if (data.Local) {
                        $("#nombre").val(data.NombreProveedor);
                        $("#apellido").val(data.ApellidoProveedor);
                        $("#cedula").val(data.CedulaProveedor);
                        $("#telefono").val(data.Telefono);
                        $("#ruc").val(data.RUC);
                        $("#estado").val(data.RUC);
                        $("#ir").val(data.RUC);
                        $("#tipo").val(data.Local);
                    } else {
                        $("#nombre").val(data.NombreProveedor);
                        $("#telefono").val(data.Telefono);
                        $("#ruc").val(data.RUC);
                        $("#estado").val(data.RUC);
                        $("#ir").val(data.RUC);
                        $("#tipo").val(data.Local);
                    }
                    $("#VistaParcial").html(data);
                }
            });
        }

    </script>
}

@{
    Layout = null;
}

<style>

    .form_wizard .stepContainer {
        min-height: 150px !important;
    }

    textarea {
        resize: none !important;
    }
</style>

<div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">


        <div id="wizard" class="form_wizard wizard_horizontal">
            <ul class="wizard_steps">
                <li>
                    <a href="#step-1">
                        <span class="step_no">1</span>
                        <span class="step_descr">
                            Paso 1<br />
                            <small>Agrega un Platillo</small>
                        </span>
                    </a>
                </li>
                <li>
                    <a href="#step-2">
                        <span class="step_no">2</span>
                        <span class="step_descr">
                            Paso 2<br />
                            <small>Agrega su Receta</small>
                        </span>
                    </a>
                </li>
                <li>
                    <a href="#step-3">
                        <span class="step_no">3</span>
                        <span class="step_descr">
                            Paso 3<br />
                            <small>Agrega una Imagen</small>
                        </span>
                    </a>
                </li>
            </ul>
            <div class="stepContainer">
                <div id="step-1">
                    <div class="form-horizontal form-label-left">

                        <div class="form-group col-md-6 col-sm-6 col-xs-6">
                            @Html.Label("Código", htmlAttributes: new { @class = "col-md-4 col-sm-4 col-xs-12" })
                            <input id="ruc" class="form-control col-md-2 col-sm-2 col-xs-2" required="required" type="text" maxlength="3" autocomplete="off">
                        </div>

                        <div class="form-group col-md-6 col-sm-6 col-xs-6">
                            @Html.Label("Descripción", htmlAttributes: new { @class = "col-md-4 col-sm-4 col-xs-12" })
                            <input id="cedula" class="form-control col-md-2 col-sm-2 col-xs-2" required="required" type="text" maxlength="50" autocomplete="off">
                        </div>

                        <div class="form-group col-md-6 col-sm-6 col-xs-6">
                            @Html.Label("Precio", htmlAttributes: new { @class = "col-md-4 col-sm-4 col-xs-12" })
                            <input id="ruc" class="form-control col-md-2 col-sm-2 col-xs-2" required="required" type="text" autocomplete="off">
                        </div>

                        <div class="form-group col-md-6 col-sm-6 col-xs-6">
                            @*@Html.DropDownList("Categoría", null, htmlAttributes: new { @class = "col-md-4 col-sm-4 col-xs-12" })*@
                            @Html.Label("Categoría", htmlAttributes: new { @class = "col-md-4 col-sm-4 col-xs-12" })
                            <input id="cedula" class="form-control col-md-2 col-sm-2 col-xs-2" required="required" type="text" maxlength="50" autocomplete="off">
                        </div>

                    </div>
                </div>
                <div id="step-2">

                    <div class="col-md-8 center-margin">

                        <div class="form-group col-md-12 col-sm-12 col-xs-12">
                            @Html.Label("Código", htmlAttributes: new { @class = "col-md-4 col-sm-4 col-xs-12" })
                            <input id="ruc" class="form-control col-md-2 col-sm-2 col-xs-2" required="required" type="text" maxlength="3" autocomplete="off">
                        </div>

                        <div class="form-group col-md-12 col-sm-12 col-xs-12">
                            @Html.Label("Ingredientes", htmlAttributes: new { @class = "col-md-4 col-sm-4 col-xs-12" })
                            <textarea id="cedula" class="form-control col-md-2 col-sm-2 col-xs-2" required="required" rows="4" cols="50" maxlength="50" autocomplete="off"></textarea>
                        </div>

                    </div>

                </div>
                <div id="step-3">
                    <div class="col-md-8 center-margin">                        
                        
                        <input id="file" type="file" />

                        <br />

                        <div id="preview" class="img-preview preview-md">
                            <img id="img" src="~/images/user.png" style="width:100%;height:200px;" />
                        </div>

                    </div>
                </div>
            </div>       <!-- End SmartWizard Content -->
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#wizard').smartWizard();
    });

    document.getElementById("file").onchange = function (e) {
        // Creamos el objeto de la clase FileReader
        let reader = new FileReader();

        // Leemos el archivo subido y se lo pasamos a nuestro fileReader
        reader.readAsDataURL(e.target.files[0]);

        // Le decimos que cuando este listo ejecute el código interno
        reader.onload = function () {
            let preview = document.getElementById('preview'),
                image = document.getElementById('img');

            image.src = reader.result;

            preview.innerHTML = '';
            preview.append(image);
        };
    }

</script>
